@namespace BootstrapBlazor.Components
@inherits BootstrapModuleComponentBase
@attribute [JSModuleAutoLoader("./_content/BootstrapBlazor.Mermaid/Mermaid.razor.js")]

<span @attributes="@AdditionalAttributes" class="@ClassString" style="@Style" id="@Id">
	@if (Type != MermaidType.None)
	{
		@Type
		@if (Type == MermaidType.flowchart || Type == MermaidType.stateDiagram)
		{
			@(" " + Direction)
		}
		@if (!string.IsNullOrEmpty(MermaidTitle) &&
						(Type == MermaidType.gantt
						|| Type == MermaidType.pie
						|| Type == MermaidType.sequenceDiagram
						))
		{
			@("\ntitle " + MermaidTitle)
		}
	}
	@ChildContent
</span>
