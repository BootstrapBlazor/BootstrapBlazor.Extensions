<Project>

  <ItemGroup>
    <IP2RegionFiles Include="$(MSBuildThisFileDirectory)/../contentFiles/ip2region_v*.xdb"/>
  </ItemGroup>

  <Target Name="IP2RegionCopyFilesAfterBuild" AfterTargets="Build">
    <Message Text="[IP2Region] Copy xdb file -> $(TargetDir)" Importance="high" />
    <Copy SourceFiles="@(IP2RegionFiles)" DestinationFolder="$(TargetDir)/ip2region"/>
  </Target>

  <Target Name="IP2RegionCopyFilesAfterPublish" AfterTargets="Publish">
    <Copy SourceFiles="@(IP2RegionFiles)" DestinationFolder="$(PublishDir)/ip2region"/>
  </Target>

</Project>
