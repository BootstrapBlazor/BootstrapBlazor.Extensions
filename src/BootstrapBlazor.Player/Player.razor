@namespace BootstrapBlazor.Components
@inherits BootstrapModuleComponentBase
@attribute [JSModuleAutoLoader("./_content/BootstrapBlazor.Player/Player.razor.js", JSObjectReference = true)]

@if (Mode == PlayerMode.Audio)
{
    <audio id="@Id" playsinline controls crossorigin>
    </audio>
}
else {
    <video id="@Id" playsinline controls crossorigin>
    </video>
}
